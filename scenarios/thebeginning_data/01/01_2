resetAllUnits()
ap=getVar('Enemy')
self.comm.talk(["Thats it!"])
self.swor1.talk(["What happened?"])
self.comm.talk(["There must be a","portal or something."])
self.swor1.talk(["A portal?","A portal leading to..."])
wait(30)
self.comm.talk(["The Underworld!"])
wait(30)
quake(30)
u=getUnitAt((11,14))
if u and u.getOwner()==self.getVar('Player'): u.talk(["....","HELP!!"])
if u: u.die()
horror=Unit(Horror,ap).jumpTo((11,14))
quake(30)
wait(30)
horror.walkTo((11,13),True)
wait(40)
horror.talk(["...flesh..."])
horror.walkTo((11,10),True)
wait(40)
horror.talk(["...fresh flesh..."])
wait(30)
self.comm.talk(["RUN!","Escape to the road!"])
remAllObjectives()
addObjective(ObjUnitMustEscape(self.comm))
addObjective(ObjUnitMustEscape(self.swor1))
addObjective(ObjUnitMustEscape(self.swor2))
showObjectives()
highlight([(0,0),(0,1),(0,2)])
setState(3)